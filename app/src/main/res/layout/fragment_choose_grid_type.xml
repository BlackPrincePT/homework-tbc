<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.choose.ChooseGridTypeFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv3x3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="16dp"
        android:text="@string/_3x3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv4x4"
        app:layout_constraintEnd_toStartOf="@id/tv4x4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@color/red"
        android:padding="16dp"
        android:text="@string/_4x4"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/btnStartGame"
        app:layout_constraintEnd_toStartOf="@id/tv5x5"
        app:layout_constraintStart_toEndOf="@id/tv3x3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv5x5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="16dp"
        android:text="@string/_5x5"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv4x4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv4x4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:padding="16dp"
        android:text="@string/start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>