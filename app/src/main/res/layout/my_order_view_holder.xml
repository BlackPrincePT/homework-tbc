<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/my_order_background">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFurniture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/furniture_image_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgFurniture"
        app:layout_constraintTop_toTopOf="@id/imgFurniture" />

    <View
        android:id="@+id/iconColor"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@id/imgFurniture"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvColorAndQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/brand_white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/iconColor"
        app:layout_constraintStart_toEndOf="@id/iconColor"
        app:layout_constraintTop_toTopOf="@id/iconColor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDeliveryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/my_order_delivery_status_background"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/imgFurniture"
        app:layout_constraintTop_toBottomOf="@id/iconColor" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imgFurniture"
        app:layout_constraintStart_toEndOf="@id/imgFurniture" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/my_order_button_background"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>