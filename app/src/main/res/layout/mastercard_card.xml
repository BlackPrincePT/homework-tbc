<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/mastercard_card_background"
        app:layout_constraintDimensionRatio="327:191"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMastercardLogo"
        android:layout_width="61dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintDimensionRatio="33:20"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        app:srcCompat="@drawable/mastercard_logo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mastercard"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/ivMastercardLogo"
        app:layout_constraintStart_toStartOf="@id/ivMastercardLogo"
        app:layout_constraintTop_toBottomOf="@id/ivMastercardLogo" />

    <!-- Cardholder Name -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardholderNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:text="@string/cardholder_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvCardholderNameValue"
        app:layout_constraintStart_toStartOf="@id/viewBackground" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardholderNameValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintStart_toStartOf="@id/viewBackground" />

    <!-- Expiration Date -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvValidThru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:text="@string/valid_thru"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tvExpirationDate"
        app:layout_constraintEnd_toEndOf="@id/viewBackground" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintEnd_toEndOf="@id/viewBackground" />

    <!-- Card Number -->

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="22dp"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/tvCardholderNameTitle"
        app:layout_constraintStart_toStartOf="@id/viewBackground" />

</androidx.constraintlayout.widget.ConstraintLayout>