<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentFragment">

    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.perullheim.homework.view.payment.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" >
        <action
            android:id="@+id/action_paymentFragment_to_addNewCardFragment"
            app:destination="@id/addNewCardFragment" />
        <action
            android:id="@+id/action_paymentFragment_to_deleteCardDialogFragment"
            app:destination="@id/deleteCardDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/addNewCardFragment"
        android:name="com.perullheim.homework.view.AddNewCardFragment"
        android:label="fragment_add_new_card"
        tools:layout="@layout/fragment_add_new_card" />
    <dialog
        android:id="@+id/deleteCardDialogFragment"
        android:name="com.perullheim.homework.view.DeleteCardDialogFragment"
        android:label="fragment_delete_card_dialog"
        tools:layout="@layout/fragment_delete_card_dialog" >
        <argument
            android:name="cardToDelete"
            app:argType="com.perullheim.homework.model.Card" />
    </dialog>
</navigation>