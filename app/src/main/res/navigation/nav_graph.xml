<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myOrdersFragment">

    <fragment
        android:id="@+id/myOrdersFragment"
        android:name="com.perullheim.homework.view.my_orders.MyOrdersFragment"
        android:label="fragment_my_orders"
        tools:layout="@layout/fragment_my_orders" >
        <action
            android:id="@+id/action_myOrdersFragment_to_myOrdersRecyclerViewFragment"
            app:destination="@id/myOrdersRecyclerViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/myOrdersRecyclerViewFragment"
        android:name="com.perullheim.homework.view.my_orders.MyOrdersRecyclerViewFragment"
        android:label="fragment_my_orders_recycler_view"
        tools:layout="@layout/fragment_my_orders_recycler_view" >
        <argument
            android:name="filterType"
            app:argType="com.perullheim.homework.model.DeliveryStatus" />
    </fragment>
</navigation>